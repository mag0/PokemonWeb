---
const { image, name, description, id, ki, maxKi, race, gender, affiliation } =
  Astro.props;
---

<div
  class="max-w-sm bg-yellow-200 border border-yellow-400 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
>
  <a href="#" class="flex justify-center items-center">
    <img src={image} alt={name} />
  </a>
  <div class="p-5">
    <a href="#">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-blue-800 dark:text-white"
      >
        {name}
      </h5>
    </a>
    <p class="mb-3 font-normal text-blue-700 dark:text-gray-400">
      <strong>Ki:</strong>
      {ki}<br />
      <strong>Max Ki:</strong>
      {maxKi}<br />
      <strong>Race:</strong>
      {race}<br />
      <strong>Gender:</strong>
      {gender}<br />
      <strong>Affiliation:</strong>
      {affiliation}
    </p>
    <button
      data-modal-target={`modal-${id}`}
      data-modal-toggle={`modal-${id}`}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      Description
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </button>
  </div>
  <!-- Modal -->
  <div
    id={`modal-${id}`}
    tabindex="-1"
    aria-hidden="true"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
  >
    <div class="relative w-full max-w-2xl max-h-full">
      <!-- Modal content -->
      <div
        class="relative bg-white rounded-lg shadow border-4 border-yellow-400 dark:bg-gray-700"
      >
        <!-- Modal header -->
        <div
          class="flex items-center justify-between p-4 bg-blue-600 rounded-t text-white dark:bg-blue-700"
        >
          <h3 class="text-xl font-semibold">
            {name}
          </h3>
          <button
            type="button"
            class="text-white bg-transparent hover:bg-red-800 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-red-600"
            data-modal-hide={`modal-${id}`}
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <!-- Modal body -->
        <div
          class="p-4 md:p-5 bg-blue-200 text-blue-900 dark:bg-blue-800 dark:text-white"
        >
          {description}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  img {
    height: 400px;
  }
</style>
